{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "strict": false,
    "baseUrl": "./",
    "paths": {
      "@": [
        "../src"
      ],
      "@/*": [
        "../src/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.vue",
    "./**/*.tsx"
  ]
}