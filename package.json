{
  "name": "tune-ui",
  "version": "1.1.8",
  "description": "基于Vue3的现代化UI组件库",
  "main": "./dist/lib/index.js",
  "module": "./dist/es/index.js",
  "typings": "./dist/es/src/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "ui",
    "tui",
    "vue3",
    "typescript",
    "components",
    "ui-library"
  ],
  "scripts": {
    "dev": "vite serve test",
    "test:dev": "vite serve test",
    "build": "vite build",
    "build:analyze": "vite build --config vite.config.analyze.ts",
    "build:check": "node scripts/check-build.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint": "npm run lint:es && npm run lint:prettier",
    "lint:es": "eslint --cache --max-warnings 0  \"./**/*.{vue,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write \"src/**/*.{js,ts,json,tsx,css,less,scss,vue,html,md}\"",
    "clean": "rimraf dist es lib .eslintcache",
    "prepare": "husky install",
    "commit": "git-cz",
    "release": "standard-version",
    "prepublishOnly": "npm run clean && npm run build && npm run build:check",
    "postversion": "git push && git push --tags"
  },
  "author": "tommyrunner",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tommyrunner/tui.git"
  },
  "bugs": {
    "url": "https://github.com/tommyrunner/tui/issues"
  },
  "homepage": "https://github.com/tommyrunner/tui#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@vitejs/plugin-vue": "^5.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.20.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "markdown-it-container": "^4.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.70.0",
    "standard-version": "^9.5.0",
    "tune-ui": "^1.1.9",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2",
    "vitepress": "^1.0.0-rc.40",
    "vue": "^3.5.13",
    "vue-router": "^4.4.2"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "escape-html": "^1.0.3",
    "prismjs": "^1.30.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,css}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
